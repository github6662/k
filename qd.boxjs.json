{
  "id": "qidian_single",
  "name": "起点读书·单账号版",
  "keys": ["qd_session", "qd_taskId", "qd_timeout", "enable_auto"],
  "desc": "适配 @mcdasheng 脚本，单账号自动签到+阅读任务",
  "settings": [
    {
      "id": "qd_session",
      "name": "账号 Session",
      "val": "",
      "type": "text",
      "placeholder": "抓包获取的qd_session值",
      "desc": "必填！账号核心验证参数"
    },
    {
      "id": "qd_taskId",
      "name": "任务 ID",
      "val": "",
      "type": "text",
      "placeholder": "抓包任务接口获取",
      "desc": "任务关联标识，建议填写"
    },
    {
      "id": "qd_timeout",
      "name": "执行间隔(秒)",
      "val": 20,
      "type": "number",
      "min": 10,
      "max": 60,
      "desc": "避免频繁请求，默认20秒"
    },
    {
      "id": "enable_auto",
      "name": "开启自动任务",
      "val": true,
      "type": "boolean",
      "desc": "一键开关自动签到+阅读时长任务"
    }
  ],
  "script": "https://raw.githubusercontent.com/github6662/k/refs/heads/main/qidian_main.js",
